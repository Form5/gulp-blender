{
  "version": "0.3.7",
  "env": {
    "development": {
      "dir": "./dev/"
    },
    "production": {
      "dir": "./dist/"
    }
  },
  "connect": {
    "port": "1337",
    "livereload": true
  },
  "templates": {
    "src": "./src/views/*.jade"
  },
  "scripts": {
    "src": [
      "./src/js/**/*.js",
      "./src/js/**/*.map"
    ],
    "jsFilter": [
      "**/*.js",
      "**/*.map"
    ],
    "lint": {
      "config": "./.jshintrc",
      "exclude": [
        "!**/vendor/**/*",
        "!**/local-vendor/**/*"
      ]
    },
    "subDir": "js/"
  },
  "images": {
    "src": "./src/img/**/*.{png,gif,jpg,jpeg,svg}",
    "imgFilter": "**/*.{png,gif,jpg,jpeg}",
    "svgFilter": "**/*.svg",
    "subDir": "img/"
  },
  "styles": {
    "src": "./src/scss/*.scss",
    "cssFilter": "**/*.css",
    "scssFilter": "**/*.scss",
    "srcDir": "./src/scss/",
    "subDir": "css/"
  },
  "ico": {
    "src": "./src/img/**/*.ico",
    "subDir": "img/"
  },
  "fonts": {
    "src": "./src/fonts/**",
    "subDir": "fonts/"
  },
  "videos": {
    "src": "./src/videos/**",
    "subDir": "videos/"
  },
  "bower": {
    "jsDest": "./src/js/vendor/",
    "imgDest": "./src/img/vendor/",
    "scssDest": "./src/scss/vendor/"
  }
}
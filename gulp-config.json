{
  "name": "gulp-blender",
  "version": "1.0.0-rc.4",
  "dest": "./dist/",
  "cmd": {},
  "server": {
    "port": 1337,
    "server": {
      "baseDir": "./dev/"
    },
    "ui": {
      "port": 1338
    },
    "ghostMode": {
      "clicks": "true",
      "forms": "true",
      "scroll": "true"
    },
    "logLevel": "info",
    "logFileChanges": true,
    "logConnections": true,
    "logPrefix": "-server-",
    "open": false,
    "reloadDelay": 500,
    "notify": false,
    "middleware": []
  },
  "templates": {
    "src": [
      "./src/views/**/*.jade",
      "!./src/views/**/_*.jade"
    ],
    "jade": {
      "pretty": false
    }
  },
  "scripts": {
    "src": [
      "./src/js/**/*.js",
      "!./src/js/vendor/**/*.js"
    ],
    "lint": {
      "config": "./.eslintrc.json",
      "src": [
        "./src/js/**/*.js",
        "!./src/js/vendor/**/*.js"
      ]
    },
    "subDir": "js",
    "vendor": {
      "src": [
        "./src/js/vendor/**/*.js"
      ],
      "subDir": "js/vendor"
    }
  },
  "styles": {
    "src": "./src/scss/*.scss",
    "subDir": "css/",
    "cressDir": "./src/scss/cress",
    "foundationDir": "./src/scss/foundation",
    "autoprefixer": {
      "browsers": [
        "ie >= 10",
        "> 1%",
        "last 2 versions",
        "Firefox ESR",
        "Opera 12.1"
      ],
      "cascade": false
    }
  },
  "bower": {
    "scripts": {
      "filter": "**/*.js",
      "dest": "./src/js/vendor/"
    },
    "images": {
      "filter": "**/*.{png,gif,jpg,jpeg}",
      "dest": "./src/img/vendor/"
    },
    "styles": {
      "filter": ["**/*.scss","**/*.css"],
      "dest": "./src/scss/vendor/"
    }
  },
  "watch": {
    "styles": {
      "src": "./src/scss/**/*.scss",
      "tasks": ["styles"]
    },
    "scripts": {
      "src": "./src/js/**/*.js",
      "tasks": ["scripts"]
    },
    "templates": {
      "src": ["./src/views/**/*.jade", "./src/img/**/*.svg"],
      "tasks": ["templates"]
    }
  },
  "static": {
    "images": {
      "src": "./src/img/**/*.{png,gif,jpg,jpeg}",
      "subDir": "img/"
    },
    "rootassets": {
      "src": "./src/root/**/*",
      "subDir": "/"
    },
    "svg": {
      "src": "./src/img/**/*.svg",
      "subDir": "img/"
    },
    "ico": {
      "src": "./src/img/**/*.ico",
      "subDir": "img/"
    },
    "fonts": {
      "src": "./src/fonts/**",
      "subDir": "fonts/"
    },
    "videos": {
      "src": "./src/videos/**",
      "subDir": "videos/"
    }
  }
}
